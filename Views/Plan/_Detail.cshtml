            <div>
                <label>
                    知识技能
                </label>
                <ul>
                    @foreach (var item in Model.Targets.Where(m => (TeachPlan.TargetType)m.Type == TeachPlan.TargetType.ZhishiJineng))
                    {
                        @Html.Partial("_Target", item)
                    }
                </ul>
            </div>
