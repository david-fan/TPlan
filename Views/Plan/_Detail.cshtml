                    }
                </ul>
            </div>
            <div>
                <label>
                    情感态度
                </label>
                <ul>
                    @foreach (var item in Model.Targets.Where(m => (TeachPlan.TargetType)m.Type == TeachPlan.TargetType.QingganTaidu))
                    {
