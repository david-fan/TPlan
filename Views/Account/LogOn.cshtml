@model TeachPlan.UserInfo
@{
    ViewBag.Title = "LogOn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["user"] != null)
{
    @Html.ActionLink("教学计划库", "Index", "Plan")<br />
    @Html.ActionLink("活动库", "Index", "Active")<br />
    @Html.ActionLink("知识库", "Index", "Knowledge")
}
else
{
    using (Html.BeginForm())
    {
    <div>
        <fieldset>
            <legend>登陆</legend>
            <div>
                @Html.TextBoxFor(m => m.Name)
            </div>
            <div>
                @Html.PasswordFor(m => m.PWD)
            </div>
            <div>
                <input type="submit" value="登陆" />
            </div>
        </fieldset>
    </div>
    }
}