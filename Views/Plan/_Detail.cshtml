@model Models.PlanDetail
@{
    ViewBag.Title = "教学方案";
}
<h2>@Model.Name - @Model.Author</h2>
<p>

</p>
<script>
    var dialog;
    $(function () {
        $("#tabs").tabs();

        dialog = $('#saveDialog').dialog({
            autoOpen: false,
            width: 450,
            resizable: false,
            modal: true
        });

    });

    function OpenAddSctionDialog(data) {
        dialog.html(data);
        dialog.dialog('open');
    }
    function saveSucess(data) {
        alert(data);
    }
    function OnAddActiveSucess(data) {
        alert(data);
        dialog.dialog("close");
    }
    function OnAddStep(data) {
        dialog.html(data);
        dialog.dialog('open');
    }


</script>
<div id="saveDialog" title="Address Information">
</div>
